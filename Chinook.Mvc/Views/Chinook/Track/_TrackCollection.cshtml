                .HeaderText(TrackResources.PropertyTrackId)
                .IsIdentity(true)
                .IsPrimaryKey(true)
                .TextAlign(TextAlign.Right)
                .Visible(Track.DataProfile.IsGridVisibleFor("TrackId"))
                .Width(Track.DataProfile.GridWidthFor("TrackId"))
                .Add();
            column.Field("Name")
                .EditType(EditingType.String)
                .HeaderText(TrackResources.PropertyName)
                .Visible(Track.DataProfile.IsGridVisibleFor("Name"))
                .Width(Track.DataProfile.GridWidthFor("Name"))
                .Add();
            column.Field("AlbumId")
                .EditType(EditingType.Numeric)
                .Format(SyncfusionPatternResources.GridFormat_Integer)
                .HeaderText(TrackResources.PropertyAlbumId)
                .TextAlign(TextAlign.Right)
                .Visible(Track.DataProfile.IsGridVisibleFor("AlbumId"))
                .Width(Track.DataProfile.GridWidthFor("AlbumId"))
