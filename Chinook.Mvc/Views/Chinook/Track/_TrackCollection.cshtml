                .TextAlign(TextAlign.Right)
                .Visible(Track.DataProfile.IsGridVisibleFor("MediaTypeId"))
                .Width(Track.DataProfile.GridWidthFor("MediaTypeId"))
                .Add();
            column.Field("MediaTypeLookupText")
                .AllowEditing(false)
                .HeaderText(MediaTypeResources.EntitySingular)
                .Visible(Track.DataProfile.IsGridVisibleFor("MediaTypeLookupText"))
                .Width(Track.DataProfile.GridWidthFor("MediaTypeLookupText"))
                .Add();
            column.Field("GenreId")
                .EditType(EditingType.Numeric)
                .Format(SyncfusionPatternResources.GridFormat_Integer)
                .HeaderText(TrackResources.PropertyGenreId)
                .TextAlign(TextAlign.Right)
                .Visible(Track.DataProfile.IsGridVisibleFor("GenreId"))
                .Width(Track.DataProfile.GridWidthFor("GenreId"))
                .Add();
            column.Field("GenreLookupText")
                .AllowEditing(false)
                .HeaderText(GenreResources.EntitySingular)
                .Visible(Track.DataProfile.IsGridVisibleFor("GenreLookupText"))
                .Width(Track.DataProfile.GridWidthFor("GenreLookupText"))
                .Add();
            column.Field("Composer")
                .EditType(EditingType.String)
                .HeaderText(TrackResources.PropertyComposer)
                .Visible(Track.DataProfile.IsGridVisibleFor("Composer"))
                .Width(Track.DataProfile.GridWidthFor("Composer"))
                .Add();
            column.Field("Milliseconds")
                .EditType(EditingType.Numeric)
