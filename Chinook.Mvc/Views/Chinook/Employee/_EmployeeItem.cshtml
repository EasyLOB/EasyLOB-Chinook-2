<script>
    // Validate hidden fields
    $.validator.setDefaults({ ignore: null });
    // Parse validators
    $.validator.unobtrusive.parse($("#ZAjax"));

    $(function () {
        try {
            ej.widget.init($("#Item_Employee"));

            var model = @Html.Raw(JsonConvert.SerializeObject(Model));
            var dataProfile = @Html.Raw(JsonConvert.SerializeObject(Employee.DataProfile));
            var controllerAction = model.ControllerAction == null ? "" : model.ControllerAction.toLowerCase();

            var ajaxUrl = "";
            if (controllerAction != "create" && zContains(dataProfile.EditCollections, "Customers")) {
                // Customers
                zUrlDictionaryWrite("Customer", "@Context.Request.Url.AbsoluteUri");
                ajaxUrl = "@(Html.Raw(Url.Action("Search", "Customer", new { MasterControllerAction = Model.ControllerAction, MasterSupportRepId = Model.Employee.EmployeeId })))";
                zAjaxLoadSync("Ajax_Employee_Customers", ajaxUrl);
            }
            if (controllerAction != "create" && zContains(dataProfile.EditCollections, "Employees")) {
                // Employees
                zUrlDictionaryWrite("Employee", "@Context.Request.Url.AbsoluteUri");
                ajaxUrl = "@(Html.Raw(Url.Action("Search", "Employee", new { MasterControllerAction = Model.ControllerAction, MasterReportsTo = Model.Employee.EmployeeId })))";
                zAjaxLoadSync("Ajax_Employee_Employees", ajaxUrl);
            }

            if (controllerAction != "create" || dataProfile.Class.IsIdentity) {
                $("#Group_Employee_EmployeeId").hide();
            }

            // Associations (FK)
            // Employee
            if (model.MasterReportsTo != null) {
                $("#Employee_ReportsTo").val(model.MasterReportsTo);
                $("#Group_Employee_ReportsTo").hide();            
            }

            zOnItemView(model, dataProfile);        
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "function", exception));
        }
    });    

    function itemActive_Tab_Employee(args) {
        zTabDictionaryWrite("Employee", args.model.selectedItemIndex);

        try {
            switch(args.model.selectedItemIndex) {
                case 1:
                    zGridDataSource("Grid_Customer", "@Url.Action("DataSource", "Customer")");
                    break;
                case 2:
                    zGridDataSource("Grid_Employee", "@Url.Action("DataSource", "Employee")");
                    break;
            }
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "itemActive_Tab_Employee", exception));
        }
    }
</script>
