@model AlbumItemModel

@{
    string CSHTML = "Album - CRUD.cshtml";

    string controllerAction = Model.ControllerAction.ToLower();
    string controllerActionResource = PresentationResources.ResourceManager.GetString(Model.ControllerAction);

    string pageTitle = AppHelper.PageTitle(AlbumResources.EntitySingular, controllerAction, controllerActionResource, Model.IsMasterDetail);
    string documentTitle = AppHelper.DocumentTitle(pageTitle, Model.IsMasterDetail);
}

@using (Ajax.BeginForm(Model.ControllerAction, "Album", AppHelper.AjaxOptions, new { id = "Form_Album", style = "display: none;" }))
{
    @Html.AntiForgeryToken()

    <h4>@pageTitle</h4>

    <div class="@AppDefaults.CssClassForm">
        @{ Html.RenderPartial("_AlbumItem", Model); }
    </div>

    <div class="@AppDefaults.CssClassFormButtons">
        @Ajax.ZImageLink("Button_Cancel", Url.Action("Search", "Album"), "ZAjax", "z-buttonCancel", PresentationResources.Cancel)
        @Html.ZImageInput("Button_Save", "btn z-buttonSave", PresentationResources.Save, "$('#Album_Item_IsSave').val('True');")
        @Html.ZImageInput("Button_OK", "btn z-buttonOk", controllerActionResource)        
    </div> 
}

<script>
    $(function () {
        try {
            var model = @Html.Raw(JsonConvert.SerializeObject(Model));

            var url = zUrlDictionaryRead("Album");
            if (url) {
                $("#Button_Cancel").attr("href", url);
            }            

            $(document).prop("title", "@Html.Raw(documentTitle)");
            
            zOnCRUDView(model);
        } catch (exception) {
            zAlert(zExceptionMessage("@CSHTML", "function", exception.message));
        }
    });
</script>